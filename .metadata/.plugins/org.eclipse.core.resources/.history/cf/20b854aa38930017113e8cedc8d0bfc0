
public class LinkedList {
	int data = 0;
	LinkedList next;
	public LinkedList(){
	}
	
	public LinkedList add(int data){
		if (this.data == 0){
			this.data = data;
			System.out.println("\nstep1\n");
		}
		else {
			System.out.println("step2\n");
			this.next = new LinkedList();
			this.next.data = data;
			System.out.println("step3\n");
		}
		return this.next;
	}
	
	public String toString(){
		return this.data + "";
	}
}
